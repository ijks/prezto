## options ##
# Autocorrect is annoying...
unsetopt CORRECT

## helper functions ##
function mkd {
  mkdir $1; cd $1
}

function cless {
  pygmentize $1 | less -R
}

## aliases ##
# package managers #
alias ag='sudo apt-get'
alias pm='sudo pacman'
alias ya='yaourt'

# assorted #
alias la='ls -A'
alias py=python3
alias ipy=ipython
alias bpy=bpython
alias wo='pew workon'
alias gst='git status'
